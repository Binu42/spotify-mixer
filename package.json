{
  "private": true,
  "name": "Technofy",
  "scripts": {
    "start": "cd server && npm i && npm start --prefix server",
    "heroku-postbuild": "cd client && npm i && npm run build",
    "client": "npm start --prefix client",
    "server": "npm run devServer --prefix server",
    "dev": "concurrently --kill-others-on-fail \"npm run client\"  \"npm run server\""
  },
  "dependencies": {
    "concurrently": "^5.3.0"
  }
}